{
  "name": "SAS",
  "scopeName": "source.sas",
  "patterns": [
    {
      "include": "#strings"
    },
    {
      "begin": "(?i)proc(\\s|/\\*.*?\\*/)*(sql|fedsql)",
      "end": "(?i)(quit(\\s|/\\*.*?\\*/)*;|(?=(data|proc|%macro)\\b[^;]*;))",
      "contentName": "sas.proc.sql.content",
      "patterns": [
        {
          "include": "source.sassql"
        }
      ]
    },
    {
      "begin": "(?i)proc(\\s|/\\*.*?\\*/)*lua",
      "end": "(?i)(?=(run|quit)(\\s|/\\*.*?\\*/)*;|(data|proc|%macro)\\b[^;]*;)",
      "contentName": "sas.proc.lua.content",
      "patterns": [
        {
          "include": "source.lua"
        }
      ]
    },
    {
      "begin": "(?i)proc(\\s|/\\*.*?\\*/)*python",
      "end": "(?i)(?=(run|quit)(\\s|/\\*.*?\\*/)*;|(data|proc|%macro)\\b[^;]*;)",
      "beginCaptures": {
        "0": {
          "name": "sas.proc.python"
        }
      },
      "contentName": "proc.python.content",
      "patterns": [
        {
          "include": "source.python"
        }
      ]
    },
    {
      "begin": "(?i)data\\b.*?;",
      "end": "(?i)(?=(run|quit)(\\s|/\\*.*?\\*/)*;|(data|proc|%macro)\\b[^;]*;)",
      "beginCaptures": {
        "0": {
          "name": "sas.data"
        }
      },
      "contentName": "data.content",
      "patterns": [
        {
          "include": "#strings"
        }
      ]
    }
  ],
  "repository": {
    "strings": {
      "patterns": [
        {
          "include": "#comment-block"
        },
        {
          "include": "#sas-macro-quotes"
        },
        {
          "include": "#cards"
        },
        {
          "include": "#cards4"
        },
        {
          "include": "#string"
        }
      ]
    },
    "comment-block": {
      "patterns": [
        {
          "name": "sas.commentblock",
          "begin": "(/\\*)",
          "end": "\\*/"
        },
        {
          "name": "sas.commentblock",
          "begin": "(\\*)",
          "end": ";"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "include": "#qstring-single"
        },
        {
          "include": "#qstring-double"
        }
      ]
    },
    "qstring-double": {
      "name": "sas.string.quoted.double",
      "begin": "\"",
      "end": "\"|(?=\\n)"
    },
    "qstring-single": {
      "name": "sas.string.quoted.single",
      "begin": "'",
      "end": "'|(?=\\n)"
    },
    "sas-macro-quotes": {
      "begin": "(?i)%(?:bquote|superq|nrbquote|nrquote|nrstr|str)",
      "end": "\\)|(?=\\n)",
      "name": "sas.string.quoted.macro",
      "patterns": [
        {
          "include": "#sas-macro-quotes"
        }
      ]
    },
    "cards": {
      "begin": "(?i)\\b(?:cards|lines|datalines)\\b(\\s|/\\*.*?\\*/)*;",
      "end": ";",
      "name": "sas.string.quoted.cards"
    },
    "cards4": {
      "begin": "(?i)\\b(?:cards4|lines4|datalines4)\\b(\\s|/\\*.*?\\*/)*;;;;",
      "end": ";;;;",
      "name": "sas.string.quoted.cards4"
    },
    "ws": {
      "name": "ws",
      "match": "\\s"
    }
  }
}
